<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.dev.septiyadi.tutorlinuxid.screensplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="35dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/pavicon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TUTOR-LINUX"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".ID"
                    android:textColor="#ef711d"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy use linux your own with this apps to be i'm posible"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="monospace"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvInitial"
                    android:paddingTop="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="initialize"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:fontFamily="monospace"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvProgressSplash"
                    android:paddingTop="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:fontFamily="monospace"
                    android:layout_weight="1"
                    android:gravity="right"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/pgSplash"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/warnaPembatas"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/warnaBawah"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info Linux:"
            android:gravity="right"
            android:textSize="30dp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"/>

        <TextView
            android:id="@+id/tvKontenInfoLinux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konten Info Linux Loading...."
            android:gravity="right"
            android:textColor="#ffff"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="11sp"/>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffff"/>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.tutor-linux.id"
            android:fontFamily="monospace"
            android:textColor="#ffff"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
