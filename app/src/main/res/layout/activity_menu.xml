<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.dev.septiyadi.tutorlinuxid.menuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="35dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/pavicon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TUTOR-LINUX"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-condensed"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=".ID"
                    android:textColor="#ef711d"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-condensed"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy use linux your own with this apps to be i'm posible"
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="monospace"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ID2artikel"
                android:background="@color/colorPrimaryDark"
                android:scaleType="fitCenter"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icn_htop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="monospace"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Artikel Command Line"
                    android:textSize="19sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:fontFamily="monospace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Command dasar di operating sistem linux"
                    android:textSize="9sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ID2about"
                android:background="@color/colorPrimaryDark"
                android:scaleType="fitCenter"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icn_top"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="monospace"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Apps"
                    android:textSize="19sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:fontFamily="monospace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developer Mobile Apps, Version of Apps, Etc"
                    android:textSize="9sp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/warnaPembatas"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/warnaBawah"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TUTOR-LINUX.ID"
            android:gravity="right"
            android:textSize="30dp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"/>

        <TextView
            android:id="@+id/tvKontenInfoLinux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TutorLinuxDotId merupakan aplikasi besutan untuk menciptakan aplikasi yang dapat dimanfaatkan oleh umum untuk pengetahuan seputar teknologi OS Linux"
            android:gravity="right"
            android:textColor="#ffff"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="11sp"/>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WWW.TUTOR-LINUX.ID"
                android:fontFamily="monospace"
                android:textColor="#ffff"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="V.0.1"
                android:fontFamily="monospace"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#ffff"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
